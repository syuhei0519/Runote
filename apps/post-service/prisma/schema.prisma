generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  @@map("post") 
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  tags    PostTag[]
  createdAt DateTime @default(now())
}

model PostTag {
  postId Int
  tagId  Int

  post   Post @relation(fields: [postId], references: [id])

  @@id([postId, tagId])
}